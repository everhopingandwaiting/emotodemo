<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:src="@mipmap/loginpic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/edit_text_passwd" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入帐号"
        android:id="@+id/edit_text_usrname"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:id="@+id/edit_text_passwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edit_text_usrname"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:text="登录"
        android:layout_marginBottom="102dp"
        android:background="#39daf7"
        android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_label"
        android:id="@+id/reg_label"
        android:textColorLink="@android:color/holo_blue_bright"
        android:layout_alignBottom="@+id/login_btn"
        android:layout_alignEnd="@+id/edit_text_usrname" />
    <EditText
        android:id="@+id/unitnumber_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/machineNum"
        android:text="865067020417682"

        android:layout_weight="12"
        android:layout_gravity="center"


        android:layout_centerHorizontal="true" />


</RelativeLayout>